<?xml version="1.0" encoding="utf-8"?><androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_records"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7AD"
    android:gravity="center|top"
    android:orientation="vertical"
    android:translationY="55dp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="644dp"
        android:layout_height="129dp"
        android:background="#FFEB3B"
        android:contentDescription="@string/todo"
        android:translationX="-110dp"
        android:translationY="0dp"
        app:srcCompat="@drawable/trofeu_removebg_preview" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:background="#FFED4D"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/records"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="30sp"
        android:translationX="75dp"
        android:translationY="-90dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="266dp"
        android:layout_height="43dp"
        android:background="#8EDCDC"
        android:baselineAligned="false"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="@string/brincando_com_os_sons"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationY="80dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="266dp"
        android:layout_height="43dp"
        android:background="#8EDCDC"
        android:baselineAligned="false"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="@string/brincando_com_a_escrita"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationY="80dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="266dp"
        android:layout_height="43dp"
        android:background="#8EDCDC"
        android:baselineAligned="false"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="@string/brincando_com_a_contagem"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationY="170dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="266dp"
        android:layout_height="44dp"
        android:background="#8EDCDC"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="@string/brincando_com_as_formas"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationY="260dp" />

</LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>