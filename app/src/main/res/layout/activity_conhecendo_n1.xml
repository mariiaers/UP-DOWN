<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/barra_superior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d1e9f3"
        android:drawableTop="@drawable/borboleta_png"
        android:paddingTop="20dp"
        android:textColorHighlight="#FFFFFF" />

    <TextView
        android:id="@+id/fala_n1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#D1E9f3"
        android:gravity="center"
        android:text="Olá! Eu sou o NÚMERO 1."
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold"
        android:translationX="0dp"
        android:translationY="-0dp"
        app:fontFamily="sans-serif" />

    <ImageView
        android:id="@+id/n1_conhecendo"
        android:layout_width="171dp"
        android:layout_height="265dp"
        android:background="@drawable/numero_1"
        android:translationX="120dp"
        android:translationY="80dp" />

    <ImageView
        android:id="@+id/somn1_conhecendo"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:translationX="290dp"
        android:translationY="10dp"
        app:srcCompat="@drawable/audio_alto_falante" />

    <TextView
        android:id="@+id/proximo_n1"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:background="#d1e9f3"
        android:clickable="true"
        android:gravity="center"
        android:text="Vamos treinar a escrita do número 1?"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:translationX="10dp"
        android:translationY="100dp" />

</LinearLayout>