<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8EDCDC"
        android:baselineAligned="false"
        android:paddingTop="20dp"
        android:textColorHighlight="#FFFFFF"
        android:drawableTop="@drawable/borboleta_png" />

    <ImageView
        android:id="@+id/bvoltar"
        android:layout_width="74dp"
        android:layout_height="54dp"
        android:clickable="true"
        android:translationY="-70dp"
        app:srcCompat="@drawable/ic_voltar"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/botaoComoJogarSons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FA7E75"
        android:gravity="center"
        android:text="Como jogar?"
        android:textSize="19sp"
        android:textStyle="bold"
        android:translationY="-30dp" />

    <Button
        android:id="@+id/bnumero1"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:background="#8EDCDC"
        android:soundEffectsEnabled="false"
        android:text="1"
        android:textSize="50sp"
        android:translationX="20dp"
        android:translationY="-15dp" />

    <Button
        android:id="@+id/bnumero2"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:background="#F6FA52"
        android:text="2"
        android:textSize="50sp"
        android:translationX="150dp"
        android:translationY="-117dp" />

    <Button
        android:id="@+id/bnumero3"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:background="#8EDCDC"
        android:text="3"
        android:textSize="50sp"
        android:translationX="280dp"
        android:translationY="-219dp" />

    <Button
        android:id="@+id/bnumero4"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:background="#F6FA52"
        android:text="4"
        android:textSize="50sp"
        android:translationX="20dp"
        android:translationY="-197dp" />

    <Button
        android:id="@+id/bnumero5"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:background="#8EDCDC"
        android:text="5"
        android:textSize="50sp"
        android:translationX="150dp"
        android:translationY="-299dp" />

    <Button
        android:id="@+id/bnumero6"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:background="#F6FA52"
        android:text="6"
        android:textSize="50sp"
        android:translationX="280dp"
        android:translationY="-402dp" />

    <Button
        android:id="@+id/bnumero7"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:background="#8EDCDC"
        android:text="7"
        android:textSize="50sp"
        android:translationX="20dp"
        android:translationY="-380dp" />

    <Button
        android:id="@+id/bnumero8"
        android:layout_width="112dp"
        android:layout_height="103dp"
        android:background="#F6FA52"
        android:text="8"
        android:textSize="50sp"
        android:translationX="150dp"
        android:translationY="-482dp" />

    <Button
        android:id="@+id/bnumero9"
        android:layout_width="112dp"
        android:layout_height="104dp"
        android:background="#8EDCDC"
        android:text="9"
        android:textSize="50sp"
        android:translationX="280dp"
        android:translationY="-585dp" />

    <Button
        android:id="@+id/bnumero10"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:background="#F6FA52"
        android:text="10"
        android:textSize="50sp"
        android:translationX="280dp"
        android:translationY="-565dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="242dp"
        android:layout_height="172dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="110dp"
        android:translationX="0dp"
        android:translationY="-700dp"
        app:srcCompat="@drawable/criancas_brincando_com_numero" />

</LinearLayout>