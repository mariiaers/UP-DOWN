<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/barra_superior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d1e9f3"
        android:drawableTop="@drawable/borboleta_png"
        android:paddingTop="20dp"
        android:textColorHighlight="#FFFFFF" />

    <TextView
        android:id="@+id/enunciado_parte2_n5"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#d1e9f3"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Agora, vamos tentar desenhar o número sem o traçado:"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationX="0dp"
        android:translationY="-0dp"
        app:fontFamily="sans-serif" />

    <com.example.updown.PaintView
        android:id="@+id/drawing"
        android:layout_width="292dp"
        android:layout_height="359dp"
        android:background="@drawable/bordas"
        android:translationX="60dp"
        android:translationY="15dp" />

    <Button
        android:id="@+id/limpar_desenho"
        android:layout_width="199dp"
        android:layout_height="38dp"
        android:background="@drawable/botao"
        android:shadowColor="#98A831"
        android:shadowDx="0"

        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="LIMPAR DESENHO"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:translationX="108dp"
        android:translationY="35dp" />

    <Button
        android:id="@+id/finalizar_atividade_n5"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:background="@drawable/botao"
        android:shadowColor="#98A831"
        android:shadowDx="0"

        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="FINALIZAR ATIVIDADE? "
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationX="15dp"
        android:translationY="50dp" />

    <Button
        android:id="@+id/refazer_atividade_n5"
        android:layout_width="174dp"
        android:layout_height="45dp"
        android:background="@drawable/botao"
        android:shadowColor="#98A831"
        android:shadowDx="0"

        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="REFAZER ATIVIDADE"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationX="220dp"
        android:translationY="5dp" />

</LinearLayout>